name: Master Docker Build

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:

  build1:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    
    - name: Starting Build Message
      run: echo "Start build"
      
    - name: Build the Docker image
      run: docker compose up --build -d --remove-orphans
